<h1>
	<%= t("rails3_acts_as_licensable.license").capitalize.pluralize %> (<%= @licenses.count %>)
</h1>

<%- unless @licenses.empty? -%>
	<table>
	  <% @licenses.each do |license| %>
	    <tr>
        <td style="text-align: right;">
          <%= license_icon_tag(license) %>
        </td>
		    <td style="text-align: left;">
		    	<p>
			      <%= link_to license.title, license %><br/>
			      <small>
			        <%= link_to license.url, license.url_with_locale, :class => "external" %>
			      </small>
			    </p>
		    </td>
		    <td style="text-align: center; padding-left: 1em;">
          <%= link_to t("rails3_acts_as_licensable.view").capitalize, license %>
	    	</td>
	  	</tr>
	  <% end %>
	</table>
<%- end -%>