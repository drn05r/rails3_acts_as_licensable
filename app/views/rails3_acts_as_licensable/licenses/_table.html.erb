<% unless collection.empty? %>

	<table class="alt_table">
		<% odd_row = false -%> 
		<% for license in collection %>
		  	<tr class="<%= (odd_row = !odd_row) ? "odd_row" : "even_row" %>">
			    <td width="100px">
			    </td>
			    <td class="mid" style="text-align: left;">
			    	<p style="margin-top:0; padding-top:0; font-weight:bold; font-size: 108%;">
							<%= link_to h(license.title), license_url(license) %>
						</p>
						
						<p style="font-size: 85%;">
							<b><%= license.created_at %></b>
						</p>
						
						<p style="font-size: 85%;">
							<b><%= link_to h(license.url), license.url %></b>
						</p>
						
						<% if license.description and license.description.length > 0 %>
							<div class="desc" style="font-size: 85%;">
								<%= truncate(strip_html(license.description), :length => 180) %>
							</div>
						<% end %>
						
					</td>
			    <td class="actions"  style="width: 80px;">
		      	<%= link_to "View", license_path(license) %>
			<%= link_to "Edit", edit_license_path(license)  %>
			<%= link_to "Delete", license_path(license), { :confirm => 'Are you sure you want to delete this license?', :method => :delete } %>
		    	</td>
		  	</tr>
		<% end %>
	</table>

<% end %>
