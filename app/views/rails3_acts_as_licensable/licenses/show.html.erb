<% t "#{h @license.title}" -%>

<h1>License: <%= h @license.title %></h1>

	<ul class="sectionIcons">
	  <li><%= link_to 'Edit', edit_license_path(@license) %></li>
          <li><%= link_to 'Delete', license_path(@license), { :confirm => 'Are you sure you want to delete this license?', :method => :delete } %></li>
	</ul>

<div>
  <p><b>Title: </b><%=h @license.title %></p>
  <p><b>URL: </b><%= link_to h(@license.url), @license.url %></p>
  <p><b>Created: </b><%= @license.created_at %></p>
  <p><b>Updated: </b><%= @license.updated_at %></p>
  <h2>Attributes</h2>
  <% unless @license.license_attributes.empty? %>
  <ul>
   <%= render :partial => "rails3_acts_as_licensable/license_attributes/attribute", :collection => Rails3ActsAsLicensable::LicenseAttribute.find(:all, :conditions => ["license_id = ?", @license.id], :order => "license_option_id") %>
  </ul>
  <% else %>
  <p>None specified</p>
  <% end %> 
</div>


